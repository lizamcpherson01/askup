<% if can? :see_all_questions, @qset %>
  <span id="all-mine-other-group" class="btn-group all-mine-other-filter" data-toggle="buttons">
    <label class="btn btn-primary filter-choice all-radio<% if @filter_all %>active<% end %>">
      <input type="radio" name="all" <% if @filter_all %>checked<% end %>> All
    </label>
    <label class="btn btn-primary filter-choice <% if @filter_mine %>active<% end %>">
      <input type="radio" name="mine" <% if @filter_mine %>checked<% end %>> Mine
    </label>
    <label class="btn btn-primary filter-choice <% if @filter_other %>active<% end %>">
      <input type="radio" name="other" <% if @filter_other %>checked<% end %>> Other
    </label>
  </span>
<% end %>
